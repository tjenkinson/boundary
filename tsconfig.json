{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["dom", "es2015"],
    "types": ["jest"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
